<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" media="all" href="/static/auth.css">
    <script src="/static/util.js"></script>

    <title>{{.AccountKey}}</title>

</head>
<body>

<header class="center">
    <h1 class="account">{{.AccountKey}}</h1>
</header>

<main class="account">
    <div class="balance">
        <h2><strong>{{number .TotalSatsReceived}}</strong> sat{{if ne .TotalSatsReceived 1}}s{{end}}</h2>
        <p><strong>{{decimal .TotalFiatReceived}}</strong> {{.FiatCurrency}}</p>
    </div>
    <div class="statistics">
        <p><strong>{{number .InvoicesIssued}}</strong> invoice{{if ne .InvoicesIssued 1}}s{{end}} issued</p>
        <p><strong>{{number .InvoicesSettled}}</strong> invoice{{if ne .InvoicesSettled 1}}s{{end}} settled</p>
        <p><strong>{{number .CommentsCount}}</strong> comment{{if ne .CommentsCount 1}}s{{end}}</p>
    </div>
    <div class="buttons">
        <button onclick="location.href='/ln/pay/{{.AccountKey}}/qr-code?size=1280'">QR Code</button>
        <button onclick="location.href='/auth/accounts/{{.AccountKey}}/terminal'">Terminal</button>
        {{if .Archivable}}
            <button onclick="archive()">Archive</button>
        {{end}}
    </div>
    {{if .Invoices}}
        <div class="invoices">
            {{$previousDate := ""}}
            {{range .Invoices}}
                {{$date := date .SettleDate}}
                {{if ne $date $previousDate}}
                    {{if $previousDate}}
                        </ul>
                    {{end}}
                    <h3>{{$date}}</h3>
                    <ul>
                    {{$previousDate = $date}}
                {{end}}
                <li>
                    <div>
                        <p><strong>{{time .SettleDate}}</strong></p>
                        <p><strong>{{number .Amount}}</strong> sat{{if ne .Amount 1}}s{{end}}</p>
                    </div>
                    {{if .Comment}}
                        <p class="subdued">{{.Comment}}</p>
                    {{end}}
                </li>
            {{end}}
            </ul>
        </div>
    {{end}}
</main>

<script>
    function archive() {
        if (!confirm('Really archive the account?')) {
            return false
        }
        post('/api/accounts/{{.AccountKey}}/archive')
            .then(() => document.location.reload())
    }
</script>

</body>
</html>
